#!/bin/sh

sel="${1:-$(printf "lock\nexit\nsleep\nreboot\nshutdown" | dmenu -i)}"
[ -z "$sel" ] && exit 1

case "$sel" in
	lock) slock -l ;;
	exit) pkill -x dwm ;;
	sleep) doas zzz ;;
	reboot) doas reboot ;;
	shutdown) doas poweroff ;;
	*)
		echo "$(basename "$0"): invalid input $sel" >&2
		exit 1
		;;
esac

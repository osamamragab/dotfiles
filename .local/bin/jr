#!/bin/sh

JOURNALDIR="${JOURNALDIR:-$(xdg-user-dir DOCUMENTS)/journal}"
[ -d "$JOURNALDIR" ] || mkdir -p "$JOURNALDIR" || { echo "$(basename "$0"): can't create dir $JOURNALDIR" >&2; exit 1; }

case "$1" in
	""|new)
		f="$JOURNALDIR/$(date "+%Y-%m-%d").md"
		[ -s "$f" ] || printf "# %s\n\n" "$(date "+%Y %B %d")" > "$f"
		exec "$EDITOR" +$ "$f"
		;;
	edit) cmd="$EDITOR" ;;
	read) cmd="$EDITOR -R" ;;
	*) echo "$(basename "$0"): unknown command \"$1\"" >&2; exit 1 ;;
esac

sel="${2:-$(find "$JOURNALDIR" -maxdepth 1 -type f -printf "%P\n" | sed 's/.md$//' | sort -r | fzf)}" || exit 1
[ -f "$JOURNALDIR/$sel.md" ] || { echo "$(basename "$0"): file not found" >&2; exit 1; }

exec $cmd "$JOURNALDIR/$sel.md"

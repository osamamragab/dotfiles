#!/bin/sh

JOURNALDIR="${JOURNALDIR:-$HOME/.local/share/journal}"

panic() {
	echo "$(basename "$0"): $1" >&2
	exit 1
}

jrview() {
	if command -v glow >/dev/null 2>&1; then
		glow -p "$1"
	else
		pandoc -t html "$1" | lynx -stdin
	fi
}

if [ $# -eq 0 ]; then
	fn="$JOURNALDIR/$(date "+%Y-%m-%d").md"
	[ -s "$fn" ] || printf "# %s\n\n" "$(date "+%Y %B %d")" > "$fn"
	$EDITOR "$fn" +$
	exit 0
fi

case "$1" in
	e|edit) cmd="$EDITOR" ;;
	r|read) cmd="$EDITOR -R" ;;
	v|view) cmd="jrview" ;;
	*) panic "unknown command '$1'" ;;
esac

sel="${2:-$(find "$JOURNALDIR" -maxdepth 1 -type f -printf '%P\n' | sed "s/.md$//" | sort -r | dmenu -fn Monospace-12 -l 10 -p "select date:")}"
[ -z "$sel" ] && exit 0

[ "$sel" = "today" ] && $cmd "$JOURNALDIR/$(date "+%Y-%m-%d").md" && exit 0
[ -f "$JOURNALDIR/$sel.md" ] || panic "file not found"

$cmd "$JOURNALDIR/$sel.md"

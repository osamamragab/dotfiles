#!/bin/sh

step="${2:-5}"

case "$1" in
	set)
		cmd="--set-volume"
		val="$step"
		;;
	inc)
		cmd="-i"
		val="$((step - ($(pamixer --get-volume) % step)))" ;;
	dec)
		cmd="-d"
		val="$(($(pamixer --get-volume) % step))"
		[ "$val" -eq 0 ] && val="$step"
		;;
	toggle) cmd="-t" ;;
	*) exit 1 ;;
esac

pamixer --allow-boost "$cmd" "$val" && pkill -x -RTMIN+7 dwmblocks

vol="$(pamixer --get-volume-human)"
[ "$vol" = "muted" ] && vol="0" || vol="${vol%%%}"
icon="audio-volume-muted"
if [ "$vol" -ge 80 ]; then
	icon="audio-volume-high"
elif [ "$vol" -ge 40 ]; then
	icon="audio-volume-medium"
elif [ "$vol" -gt 0 ]; then
	icon="audio-volume-low"
fi

notify-send -r 9990 -u low -a "$(basename "$0")" -i "$icon" -h "int:value:$vol" "volume" "$vol%"

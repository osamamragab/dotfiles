#!/bin/sh

if ! command -v sxiv >/dev/null 2>&1; then
	echo "sxivr: sxiv is not installed"
	exit 1
fi

case "$@" in
	http*://*)
		dir="/tmp/sxivr-$(date '+%s')"
		mkdir -p "$dir"
		for url in "$@"; do
			curl -sSL -o "$dir/$(basename "$url")" "$url"
		done
		sxiv "$dir"
		rm -r "$dir"
		;;
	*) sxiv "$@" ;;
esac

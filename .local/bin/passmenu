#!/bin/sh
# passmenu replacement for Wayland
# requires pass, wl-copy (wl-clipboard), notify-send (libnotify), and menu script

set -eu

export PASSWORD_STORE_DIR="${PASSWORD_STORE_DIR:-${XDG_DATA_HOME:-$HOME/.local/share}/password-store}"

app="$(basename "$0")"
case "${1:-}" in
	"") ;;
	otp) otp=1 ;;
	*)
		echo "$app: unknown command: $1" >&2
		exit 1
		;;
esac

export MENU_PROMPT="${MENU_PROMPT:-$app${otp:+ otp}}"

sel="$(
	find "$PASSWORD_STORE_DIR" -type f -name "*.gpg" -printf "%P\n" |
		sed 's/\.gpg$//' |
		menu
)" || exit 1

pass="$(pass ${otp:+otp} "$sel" | sed 1q)" || {
	echo "$app: pass${otp:+ otp} command failed" >&2
	notify-send -a "$app" -u critical error "pass${otp:+ otp} command failed"
	exit 1
}

echo "$pass" | wl-copy --type text/plain --foreground --trim-newline
cliphist delete-query "$pass"

[ "${otp:-0}" -eq 1 ] && type="otp" || type="password"
notify-send -a "$app" "$sel" "$type copied to clipboard"

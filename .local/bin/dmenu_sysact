#!/bin/sh

sel="${1:-$(printf "lock\nexit\nrefresh\nsuspend\nhibernate\nreboot\npoweroff" | dmenu -i -r -p "sysact:")}" || exit 1
case "$sel" in
	lock) locker ;;
	exit) kill -TERM "$(pidof -sx dwm)" ;;
	refresh) kill -HUP "$(pidof -sx dwm)" ;;
	suspend) doas -n zzz -z ;;
	hibernate) doas -n zzz -Z ;;
	reboot) doas -n reboot ;;
	poweroff) doas -n poweroff ;;
esac

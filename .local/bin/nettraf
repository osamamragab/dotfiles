#!/bin/sh

update() {
	sum=0
	for arg; do
		read -r i < "$arg"
		sum=$(( sum + i ))
	done
	cache="${XDG_CACHE_HOME:-$HOME/.cache}/${1##*/}"
	[ -r "$cache" ] && read -r old < "$cache" || old=0
	echo "$sum" > "$cache"
	numfmt --to=iec $(( sum - old ))
}

printf "↓ %4sB – ↑ %4sB\n" \
	"$(update /sys/class/net/[ew]*/statistics/rx_bytes)" \
	"$(update /sys/class/net/[ew]*/statistics/tx_bytes)"

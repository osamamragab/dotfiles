#!/bin/sh

set -eu

case "${1:-$(printf "lock\nexit\nsuspend\nhibernate\nreboot\npoweroff" | menu -p "sysact> ")}" in
	lock) loginctl -i lock-session ;;
	exit) riverctl exit ;;
	suspend) loginctl -i suspend ;;
	hibernate) loginctl -i hibernate ;;
	reboot) loginctl -i reboot ;;
	poweroff) loginctl -i poweroff ;;
	*) exit 1 ;;
esac

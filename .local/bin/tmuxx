#!/bin/sh

PROJECTSDIR="${PROJECTSDIR:-$HOME/projects}"

prosel() {
	find "$PROJECTSDIR" -mindepth 2 -maxdepth 2 -type d -printf "%T@ %P\n" |
		sort -nr |
		cut -d " " -f 2- |
		fzy
}

case "$1" in
	.)
		dir="$(pwd)"
		shift
		;;
	-|"")
		dir="$PROJECTSDIR/$(prosel)" || exit $?
		[ $# -gt 0 ] && shift
		;;
	*)
		dir="$(readlink -f "$1")"
		shift
		;;
esac

[ -d "$dir" ] || { echo "$(basename "$0"): '$dir' is not a diretory" >&2; exit 1; }
name="$(basename "$dir")"

[ $# -gt 1 ] && tmux new -d -c "$dir" -s "$name" -n "$1" && shift
for win in "$@"; do
	tmux neww -d -t "$name" -c "$dir" -n "$win"
done

exec tmux new -A -c "$dir" -s "$name"

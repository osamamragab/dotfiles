#!/bin/sh

set -eu

action="${1:-$(printf "input\nrecents\nbookmarks\npass\npass-otp\nclipboard\nemojis\nscreenshot\nscreenrec\nsysact" | menu -p "menu> ")}" || exit 1
case "$action" in
	input | recents | bookmarks | clipboard | emojis | screenshot | screenrec | sysact)
		exec "menu-$action"
		;;
	pass | pass-otp)
		exec passmenu "${action#*-}"
		;;
	*)
		echo "$(basename "$0"): invalid menu: $action" >&2
		exit 1
		;;
esac

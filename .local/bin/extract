#!/bin/sh

if [ $# = 0 ]; then
	printf "usage: %s [archives]\n" "$(basename "$0")" >&2
	exit 1
fi

while [ $# != 0 ]; do
	[ -r "$1" ] || echo "$1: file does not exists or not readable" >&2
	case "$1" in
		*.tar.bz2|*.tbz2) tar -xvjf "$1" ;;
		*.tar.gz|*.tgz) tar -xvzf "$1" ;;
		*.tar.xz) tar -Jxvf "$1" ;;
		*.tar) tar -xvf "$1" ;;
		*.bz2) bunzip2 "$1" ;;
		*.gz) gunzip "$1" ;;
		*.xz) unxz "$1" ;;
		*.lzma) unlzma "$1" ;;
		*.zip) unzip -d "$(echo "$1" | sed 's/\(.*\)\.zip/\1/')" "$1" ;;
		*.rar) unrar x -ad "$1" ;;
		*.Z) uncompress "$1" ;;
		*.7z) 7z x "$1" ;;
		*) echo "$1: unknown archive type" >&2 ;;
	esac
	shift
done

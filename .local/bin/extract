#!/bin/sh

if [ ! "$1" ]; then
	printf "usage:\n\t%s archive_file_name\n" "$(basename "$0")"
	exit 1
fi

if [ ! -f "$1" -o ! -r "$1" ]; then
	echo "$1: file does not exists or not readable"
	exit 1
fi

case $1 in
	*.tar.bz2) tar xvjf "$1" ;;
	*.tar.gz) tar xvzf "$1" ;;
	*.tar.xz) tar Jxvf "$1" ;;
	*.bz2) bunzip2 "$1" ;;
	*.rar) rar x "$1" ;;
	*.gz) gunzip "$1" ;;
	*.tar) tar xvf "$1" ;;
	*.tbz2) tar xvjf "$1" ;;
	*.tgz) tar xvzf "$1" ;;
	*.zip) unzip -d "$(echo "$1" | sed 's/\(.*\)\.zip/\1/')" "$1" ;;
	*.Z) uncompress "$1" ;;
	*.7z) 7z x "$1" ;;
	*) echo "file type is not supported" ;;
esac

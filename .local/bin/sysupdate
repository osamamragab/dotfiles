#!/bin/sh

sudocmd="$(command -v doas 2>/dev/null || command -v sudo 2>/dev/null)"

updatepkgs() {
	$sudocmd pacman -Syu --noconfirm
	paru -Sua --noconfirm
	command -v rustup >/dev/null 2>&1 && rustup update
}

clean() {
	$sudocmd pacman -Sqc --noconfirm
	paru -Sqca --noconfirm
}

case "$1" in
	"" | pkgs) updatepkgs ;;
	clean) clean ;;
	*)
		echo "$(basename "$0"): unknown command \"$1\"" >&2
		exit 1
		;;
esac

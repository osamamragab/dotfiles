#!/bin/sh

sel="${1:-$(printf "lock\nexit\nsleep\nreboot\nshutdown" | dmenu -i)}"
[ -z "$sel" ] && exit 1

case "$sel" in
	lock) locker ;;
	sleep) doas zzz ;;
	reboot) doas reboot ;;
	shutdown) doas poweroff ;;
	exit) kill -TERM dwm ;;
	refresh) kill -HUP dwm ;;
	*)
		echo "$(basename "$0"): invalid input $sel" >&2
		exit 1
		;;
esac

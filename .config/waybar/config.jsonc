{
	"layer": "bottom",
	"position": "top",
	"height": 1,
	"modules-left": [
		"river/tags",
		"river/mode",
	],
	"modules-center": [
		// "river/window",
		"clock#date",
		"clock#time",
	],
	"modules-right": [
		"mpris",
		"privacy",
		"custom/recording",
		"tray",
		"custom/dnd",
		"wireplumber",
		"bluetooth",
		"network",
		// "memory",
		// "cpu",
		// "temperature",
		"upower",
		"custom/days",
	],
	"river/tags": {
		"num-tags": 9,
		"hide-vacant": true,
	},
	"clock#time": {
		"interval": 10,
		"format": "{:%H:%M}",
		"tooltip": false,
	},
	"clock#date": {
		"interval": 60,
		"format": "{:%A}",
		"tooltip-format": "<span size='10pt'>{calendar}</span>",
		"calendar": {
			"mode": "month",
			"mode-mon-col": 3,
			"weeks-pos": "right",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#eceff4'><b>{}</b></span>",
				"days": "<span color='#eceff4'><b>{}</b></span>",
				"weeks": "<span color='#8fbcbb'><b>W{}</b></span>",
				"weekdays": "<span color='#81a1c1'><b>{}</b></span>",
				"today": "<span color='#bf616a'><b>{}</b></span>",
			},
		},
		"actions": {
			"on-click": "shift_reset",
			"on-click-right": "mode",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down",
		},
	},
	"wireplumber": {
		"format": "{icon}",
		"format-muted": "",
		"tooltip-format": "{volume}% - {node_name}",
		"on-click": "foot -a float wiremix",
		"on-click-right": "helvum",
		"on-click-middle": "volumectl toggle",
		"max-volume": 200,
		"scroll-step": 5,
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": ["", "", ""],
		},
	},
	/*
	"battery": {
		"interval": 5,
		"states": {
			"warning": 20
		},
		"format": "{icon} {capacity}%",
		"format-charging": "{icon} {capacity}% ",
		"format-plugged": "{icon} {capacity}% ",
		"format-warning": "{icon} {capacity}% ",
		"format-time": "{H}h {M}m",
		"tooltip-format": "{timeTo}\nhealth: {health}%",

			""
		]
	},
	*/
	"upower": {
		"format": " {percentage}",
		"tooltip-format": " {time}",
		"tooltip": true,
		"tooltip-spacing": 20,
		"icon-size": 16,
		"hide-if-empty": true,
	},
	/*
	"temperature": {
		"interval": 10,
		"critical-threshold": 90,
		"hwmon-path": "/sys/class/hwmon/hwmon7/temp1_input",
		"format": "{icon} {temperatureC}°C",
		"format-critical": "{icon} {temperatureC}°C ",
		"format-icons": [
			"",
			"",
			"",
			"",
			""
		]
	},
	"cpu": {
		"interval": 10,
		"format": " {}%",
		"max-length": 10
	},
	"memory": {
		"interval": 30,
		"format": " {used:0.1f}G",
		"tooltip-format": "mem:  {used:0.1f}G/{total:0.1f}G ({percentage}%)\nswap: {swapUsed:0.1f}G/{swapTotal:0.1f}G ({swapPercentage}%)",
		"max-length": 10
	},
	*/
	"network": {
		"interval": 60,
		"format": "{ifname}",
		"format-wifi": "{icon}",
		"format-ethernet": "",
		"format-disconnected": "",
		"format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
		"on-click": "foot -a float -w 980x620 impala",
		"tooltip-format": "{ifname} via {gwaddr} 󰊗",
		"tooltip-format-wifi": "{essid} ({frequency}GHz) {signalStrength}% \n{ifname}: {ipaddr}/{cidr}",
		"tooltip-format-ethernet": "{ifname}: {ipaddr}/{cidr}",
		"tooltip-format-disconnected": "Disconnected",
	},
	"bluetooth": {
		"format": "",
		"format-connected": " {device_alias}",
		"format-disabled": "󰂲",
		"format-no-controller": "",
		"format-connected-battery": " {device_alias} {device_battery_percentage}%",
		"on-click": "foot -a float -w 980x620 bluetoothctl",
		"tooltip-format": "{controller_alias}\t{controller_address}",
		"tooltip-format-connected": "{controller_alias}\t{controller_address}\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "- {device_alias}\t[{device_address}]",
		"tooltip-format-enumerate-connected-battery": "- {device_alias}\t[{device_address}]\t({device_battery_percentage}%)",
	},
	"privacy": {
		"icon-spacing": 4,
		"icon-size": 18,
		"transition-duration": 250,
		"ignore-monitor": true,
		"ignore": [
			{
				"type": "audio-in",
				"name": "echo-cancel-capture",
			},
		],
		"modules": [
			{
				"type": "screenshare",
				"tooltip": true,
				"tooltip-icon-size": 24,
			},
			{
				"type": "audio-in",
				"tooltip": true,
				"tooltip-icon-size": 24,
			},
		],
	},
	"tray": {
		"icon-size": 18,
		"spacing": 12,
	},
	"mpris": {
		"player": "playerctld",
		"format": "{status_icon}",
		"tooltip-format": "{title} • {artist}",
		"title-len": 10,
		"artist-len": 10,
		"status-icons": {
			"paused": "",
			"stopped": "",
			"playing": "",
		},
	},
	"custom/dnd": {
		"format": "{}",
		"interval": "once",
		"exec": "$XDG_CONFIG_HOME/waybar/scripts/dnd",
		"on-click": "makoctl mode -r dnd >/dev/null 2>&1",
		"tooltip": false,
		"hide-empty-text": true,
		"signal": 7,
	},
	"custom/recording": {
		"format": "{}",
		"interval": "once",
		"exec": "echo ''",
		"exec-if": "pidof -sqx wf-recorder",
		"on-click": "menu-handler screenrec stop",
		"tooltip": false,
		"signal": 8,
	},
	"custom/days": {
		"format": "{}",
		"tooltip": false,
		"interval": 1800,
		"exec": "echo $(( ($(date +%s) - $(date -d 2004-06-09 +%s)) / 86400 ))",
		"on-click": "foot -a float -w 980x620 notes todo",
	},
}

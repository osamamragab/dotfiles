{
	"layer": "top",
	"position": "top",
	"height": 1,
	"modules-left": [
		"river/tags",
		"river/mode"
	],
	"modules-center": [
		// "river/window",
		"clock#date",
		"clock#time",
		"privacy",
		"custom/recording"
	],
	"modules-right": [
		"tray",
		"custom/dnd",
		"pulseaudio",
		"bluetooth",
		"network",
		"memory",
		"cpu",
		"temperature",
		"battery"
	],
	"river/tags": {
		"num-tags": 9,
		"hide-vacant": true
	},
	"clock#time": {
		"interval": 10,
		"format": " {:%H:%M}",
		"tooltip": false
	},
	"clock#date": {
		"interval": 60,
		"format": " {:%a %d %b}",
		"tooltip-format": "<span size='10pt'>{calendar}</span>",
		"calendar": {
			"mode": "month",
			"mode-mon-col": 3,
			"weeks-pos": "right",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#eceff4'><b>{}</b></span>",
				"days": "<span color='#eceff4'><b>{}</b></span>",
				"weeks": "<span color='#8fbcbb'><b>W{}</b></span>",
				"weekdays": "<span color='#81a1c1'><b>{}</b></span>",
				"today": "<span color='#bf616a'><b><u>{}</u></b></span>"
			}
		},
		"actions": {
			"on-click": "mode",
			"on-click-right": "shift_reset",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		}
	},
	"pulseaudio": {
		"format": "{icon}{volume}%",
		"format-muted": " muted",
		"on-click": "foot -a float pulsemixer",
		"on-click-right": "helvum",
		"on-click-middle": "volumectl toggle",
		"max-volume": 200,
		"scroll-step": 5,
		"format-icons": {
			"headphone": " ",
			"hands-free": " ",
			"headset": " ",
			"default": [
				" ",
				" ",
				" "
			]
		}
	},
	"battery": {
		"interval": 60,
		"states": {
			"warning": 20
		},
		"format": "{icon}{capacity}%",
		"format-charging": "{icon}{capacity}% ",
		"format-plugged": "{icon}{capacity}% ",
		"format-warning": "{icon}{capacity}% ",
		"format-time": "{H}h {M}m",
		"format-icons": [
			" ",
			" ",
			" ",
			" ",
			" "
		]
	},
	"temperature": {
		"interval": 10,
		"critical-threshold": 80,
		"format": "{icon} {temperatureC}°C",
		"format-icons": [
			"",
			"",
			"",
			"",
			""
		]
	},
	"cpu": {
		"interval": 10,
		"format": " {}%",
		"max-length": 10
	},
	"memory": {
		"interval": 30,
		"format": " {used:0.1f}G",
		"tooltip-format": "mem:  {used:0.1f}G/{total:0.1f}G ({percentage}%)\nswap: {swapUsed:0.1f}G/{swapTotal:0.1f}G ({swapPercentage}%)",
		"max-length": 10
	},
	"network": {
		"interface": "wlan0",
		"format": "{ifname}",
		"format-wifi": " {signalStrength}%",
		"format-ethernet": "{ipaddr}/{cidr} ",
		"format-disconnected": "",
		"on-click": "foot -a float wpa_cli",
		"tooltip-format": "{ifname} via {gwaddr} 󰊗",
		"tooltip-format-wifi": "{essid} ({frequency}GHz)\n{ipaddr}/{cidr} at {ifname}",
		"tooltip-format-ethernet": "{ifname} ",
		"tooltip-format-disconnected": "Disconnected"
	},
	"bluetooth": {
		"format": "", // " {status}",
		"format-connected": " {device_alias}",
		"format-connected-battery": " {device_alias} {device_battery_percentage}%",
		"on-click": "foot -a float bluetoothctl",
		"tooltip-format": "{controller_alias}\t{controller_address}",
		"tooltip-format-connected": "{controller_alias}\t{controller_address}\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "- {device_alias}\t[{device_address}]",
		"tooltip-format-enumerate-connected-battery": "- {device_alias}\t[{device_address}]\t({device_battery_percentage}%)"
	},
	"privacy": {
		"icon-spacing": 4,
		"icon-size": 18,
		"transition-duration": 250,
		"modules": [
			{
				"type": "screenshare",
				"tooltip": true,
				"tooltip-icon-size": 24
			},
			{
				"type": "audio-in",
				"tooltip": true,
				"tooltip-icon-size": 24
			}
		]
	},
	"tray": {
		"icon-size": 18,
		"spacing": 12
	},
	"custom/dnd": {
		"format": "{}",
		"interval": "once",
		"exec": "$XDG_CONFIG_HOME/waybar/scripts/dnd",
		"on-click": "makoctl mode -r dnd >/dev/null 2>&1",
		"tooltip": false,
		"hide-empty-text": true,
		"signal": 7
	},
	"custom/recording": {
		"format": "{}",
		"interval": "once",
		"exec": "echo ''",
		"exec-if": "pidof -sqx wf-recorder",
		"on-click": "menu-record stop",
		"tooltip": false,
		"signal": 8
	}
}

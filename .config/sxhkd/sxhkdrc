super + Return
	$TERMINAL

alt + v
	$TERMINAL -e $EDITOR

alt + f
	$TERMINAL -e nnn -Rr

alt + m
	$TERMINAL -e ncmpcpp

alt + p
	mpv $(xclip -o)

alt + e
	$TERMINAL -e neomutt

alt + b
	$BROWSER

alt + shift + l
	xautolock -locknow

alt + {equal, minus, BackSpace}
	$HOME/dotfiles/scripts/volume.sh {up, down, toggle}

super + shift + BackSpace
	$HOME/dotfiles/scripts/shutdown.sh

Print
	maim -u -i $(xdotool getactivewindow) | xclip -sel clip -t image/png

shift + Print
	maim -u -i $(xdotool getactivewindow) ~/Pictures/screenshot-$(date +%s).png

ctrl + Print
	maim -s | xclip -sel clip -t image/png

ctrl + shift + Print
	maim -s ~/Pictures/screenshot-$(date +%s).png

alt + shift + {period, comma, r, z, s, space, BackSpace, equal, minus}
	mpc -q {next, prev, repeat, random, single, toggle, seek 0, volume +5, volume -5}

alt + shift + p
	notify-send "Playing" "$(mpc current)"

ctrl + shift + BackSpace
	dunstctl set-paused toggle

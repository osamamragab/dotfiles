#!/bin/sh

xset -b &
xset r rate 200 50 &
xset s 600 &
xsidle slock &

xbacklight -set 80 &
xrdb "$XDG_CONFIG_HOME/x11/xresources" & xrdb_pid=$!
(xwallpaper --zoom "$XDG_DATA_HOME/bg" >/dev/null 2>&1 ||
	{ wait $xrdb_pid && xsetroot -solid "$(xrdb -get background)"; }) &

[ -z "$SSH_AUTH_SOCK" ] && eval "$(ssh-agent -s)"
[ -z "$DBUS_SESSION_BUS_ADDRESS" ] && eval "$(dbus-launch --exit-with-session --sh-syntax)"
dbus-update-activation-environment --all

for p in sxhkd picom pipewire dunst scrond clipmenud dwmblocks mpd mpris-proxy "xbanish -i all" "syncthing serve --no-browser"; do
	pidof -qsx "${p%% *}" || $p &
done >/dev/null 2>&1

exec dwm

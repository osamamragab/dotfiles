#!/bin/sh

xset -b &
xset r rate 200 50 &
xset s 600 &
xsidle slock &

xbacklight -set 80 &
xrdb "$XDG_CONFIG_HOME/x11/xresources" & xrdb_pid=$!
(xwallpaper --zoom "$XDG_DATA_HOME/bg" >/dev/null 2>&1 ||
	{ wait $xrdb_pid && setroot -solid "$(xrdb -get background)"; }) &

xsetroot -solid "$(xrdb -get background)" &

eval "$(ssh-agent -s)"

for p in sxhkd pipewire mpd dunst scrond clipmenud dwmblocks "xbanish -i all" "syncthing serve --no-browser"; do
	pidof -qsx "${p%% *}" || $p &
done >/dev/null 2>&1

exec dwm

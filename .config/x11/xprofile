#!/bin/sh

xset -b &
xset s 180 120 &
xss-lock -n "screenlightctl dim" locker &
xrdb "${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources" & xrdbpid=$!
[ -f "${XDG_DATA_HOME:-$HOME/.local/share}/bg" ] && xwallpaper --zoom "${XDG_DATA_HOME:-$HOME/.local/share}/bg" >/dev/null 2>&1 &

for p in picom xbanish pipewire mpd dunst clipmenud remapd dwmblocks; do
	pidof -xs "$p" || "$p" &
done >/dev/null 2>&1

if command -v gnome-keyring >/dev/null 2>&1 && [ -x /lib/gcr-ssh-agent ]; then
	[ -d "$XDG_RUNTIME_DIR/gcr" ] || mkdir -p "$XDG_RUNTIME_DIR/gcr"
	/lib/gcr-ssh-agent "$XDG_RUNTIME_DIR/gcr" &
	export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/gcr/ssh"
else
	eval "$(ssh-agent)"
fi

[ -n "$xrdbpid" ] && wait "$xrdbpid"

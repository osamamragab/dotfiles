[init]
	defaultBranch = main

[core]
	editor = nvim
	pager = delta

[user]
	name = osama
	email = iosamaify@gmail.com
	username = osamai

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = true

[rebase]
	autoStash = true

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true

[color "branch"]
	current = green
	remote = yellow

[alias]
	co = checkout
	st = status -sb
	br = branch
	ci = commit
	ca = commit -a
	cm = commit -m
	cam = commit -am
	fo = fetch origin
	dt = difftool
	cl = clone
	cld = clone --depth 1
	clb = clone --bare
	unstage = reset HEAD --
	undo = reset --soft HEAD^
	logg = log --oneline --graph --decorate
	lastcm = log -1 HEAD
	tree = ls-tree --full-tree -r HEAD
	ls = ls-files
	wt = worktree

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[delta]
	line-numbers = true
	syntax-theme = Nord
	side-by-side = false
	file-modified-label = modified:

#!/bin/sh

export TERMINAL="st"
export EDITOR="nvim"
export VISUAL="nvim"
export BROWSER="firefox"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export XINITRC="${XDG_CONFIG_HOME:-$HOME/.config}/x11/xinitrc"
export INPUTRC="${XDG_CONFIG_HOME:-$HOME/.config}/shell/inputrc"
export ZDOTDIR="${XDG_CONFIG_HOME:-$HOME/.config}/zsh"
export HISTFILE="${XDG_DATA_HOME:-$HOME/.local/share}/history"
export LESSHISTFILE="-"
export PASSWORD_STORE_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/password-store"
export WGETRC="${XDG_CONFIG_HOME:-$HOME/.config}/wget/wgetrc"
export NOTMUCH_CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/notmuch-config"
export MBSYNCRC="${XDG_CONFIG_HOME:-$HOME/.config}/mbsync/config"
export WEECHAT_HOME="${XDG_CONFIG_HOME:-$HOME/.config}/weechat"
export GTK2_RC_FILES="${XDG_CONFIG_HOME:-$HOME/.config}/gtk-2.0/gtkrc-2.0"
export GOPATH="${XDG_DATA_HOME:-$HOME/.local/share}/go"
export RUSTUP_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/rustup"
export CARGO_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/cargo"
export PYENV_ROOT="${XDG_DATA_HOME:-$HOME/.local/share}/pyenv"
export DENO_INSTALL_ROOT="${XDG_DATA_HOME:-$HOME/.local/share}/deno/bin"
export YARN_PREFIX="${XDG_DATA_HOME:-$HOME/.local/share}/yarn"
export GEM_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/gems"
export GEM_PATH="$GEM_HOME:/usr/lib/ruby/gems/3.0.0"
export MIX_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/mix"
export IPYTHONDIR="${XDG_CONFIG_HOME:-$HOME/.config}/ipython"
export NLTK_DATA="${XDG_DATA_HOME:-$HOME/.local/share}/nltk_data"
export ANSIBLE_CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/ansible/ansible.cfg"
export CHTSH="${XDG_CONFIG_HOME:-$HOME/.config}/cht.sh"
export _Z_DATA="${XDG_DATA_HOME:-$HOME/.local/share}/zdata"
export NOTESDIR="${XDG_DATA_HOME:-$HOME/.local/share}/notes"
export FLATPAK_USER_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/flatpak"
export FLATPAK_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/flatpak"

command -v luarocks >/dev/null 2>&1 && PATH="$(luarocks path --lr-bin | cut -d ":" -f 1):$PATH"
command -v pyenv >/dev/null 2>&1 && eval "$(pyenv init --path)"
export PATH="$HOME/bin:$HOME/.local/bin:$GOPATH/bin:$CARGO_HOME/bin:$PYENV_ROOT/bin:$DENO_INSTALL_ROOT:$YARN_PREFIX/bin:$(echo "$GEM_PATH" | sed "s@:@/bin:@g")/bin:$PATH"

export SUDO_ASKPASS="$HOME/.local/bin/dmenuaskpass"
export SSH_ASKPASS="$HOME/.local/bin/dmenuaskpass"

export NNN_OPTS="xrcER"
export NNN_PLUG="x:!chmod +x \$nnn*;p:-preview-tabbed"
export NNN_FIFO="/tmp/nnn.fifo"
export NNN_ORDER="t:$HOME/dls"
export FZF_DEFAULT_COMMAND="rg --files --hidden -L -g '!.git'"
export QT_QPA_PLATFORMTHEME="gtk2"
export _JAVA_AWT_WM_NONREPARENTING=1

export LESS="-R"
export LESSOPEN="| /usr/bin/highlight -O ansi %s 2>/dev/null"
export LESS_TERMCAP_mb="$(printf "%b" "\e[01;31m")"
export LESS_TERMCAP_md="$(printf "%b" "\e[01;31m")"
export LESS_TERMCAP_me="$(printf "%b" "\e[0m")"
export LESS_TERMCAP_se="$(printf "%b" "\e[0m")"
export LESS_TERMCAP_so="$(printf "%b" "\e[01;44;33m")"
export LESS_TERMCAP_ue="$(printf "%b" "\e[0m")"
export LESS_TERMCAP_us="$(printf "%b" "\e[01;32m")"

[ -z "$DISPLAY" ] && [ "$(tty)" = "/dev/tty1" ] && ! pidof -s Xorg >/dev/null 2>&1 && exec startx "$XINITRC"

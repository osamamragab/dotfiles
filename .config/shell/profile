#!/bin/sh

export TERMINAL="st"
export EDITOR="nvim"
export VISUAL="nvim"
export BROWSER="brave"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export XINITRC="$XDG_CONFIG_HOME/x11/xinitrc"
export INPUTRC="$XDG_CONFIG_HOME/shell/inputrc"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export HISTFILE="$XDG_DATA_HOME/history"
export LESSHISTFILE="-"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/password-store"
export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"
export NOTMUCH_CONFIG="$XDG_CONFIG_HOME/notmuch-config"
export MBSYNCRC="$XDG_CONFIG_HOME/mbsync/config"
export WEECHAT_HOME="$XDG_CONFIG_HOME/weechat"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc-2.0"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export GOPATH="$XDG_DATA_HOME/go"
export GOMODCACHE="$XDG_CACHE_HOME/go/mod"
export PYENV_ROOT="$XDG_DATA_HOME/pyenv"
export BUN_INSTALL="$XDG_DATA_HOME/bun"
export DENO_INSTALL="$XDG_DATA_HOME/deno"
export PNPM_HOME="$XDG_DATA_HOME/pnpm"
export GEM_HOME="$XDG_DATA_HOME/gems"
export GEM_PATH="$GEM_HOME:/usr/lib/ruby/gems/3.0.0"
export MIX_HOME="$XDG_DATA_HOME/mix"
export IPYTHONDIR="$XDG_CONFIG_HOME/ipython"
export ANSIBLE_CONFIG="$XDG_CONFIG_HOME/ansible/ansible.cfg"
export ANDROID_SDK_HOME="$XDG_CONFIG_HOME/android"
export SDKMAN_DIR="$XDG_DATA_HOME/sdkman"
export COURSIER_DIR="$XDG_DATA_HOME/coursier"
export DOTNET_ROOT="$XDG_DATA_HOME/dotnet"
export NLTK_DATA="$XDG_DATA_HOME/nltk_data"
export _Z_DATA="$XDG_DATA_HOME/zdata"
export NOTESDIR="$XDG_DATA_HOME/notes"
export FLATPAK_USER_DIR="$XDG_DATA_HOME/flatpak"
export FLATPAK_CONFIG_DIR="$XDG_CONFIG_HOME/flatpak"
export WINEPREFIX="$XDG_DATA_HOME/wine"
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
export SQLITE_HISTORY="$XDG_CACHE_HOME/.sqlite_history"

command -v luarocks >/dev/null 2>&1 && PATH="$(luarocks path --lr-bin | cut -d ":" -f 1):$PATH"
command -v pyenv >/dev/null 2>&1 && eval "$(pyenv init --path)"
export PATH="$HOME/.local/bin:$CARGO_HOME/bin:$GOPATH/bin:$PYENV_ROOT/bin:$COURSIER_DIR/bin:$DOTNET_ROOT:$BUN_INSTALL/bin:$DENO_INSTALL/bin:$PNPM_HOME:$(echo "$GEM_PATH" | sed "s@:@/bin:@g")/bin:$PATH"

export SUDO_ASKPASS="$HOME/.local/bin/dmenuaskpass"
export SSH_ASKPASS="$HOME/.local/bin/dmenuaskpass"

export NNN_OPTS="xrcER"
export NNN_PLUG="x:!chmod +x \$nnn*;p:-preview-tabbed"
export NNN_FIFO="/tmp/nnn.fifo"
export NNN_ORDER="t:$HOME/dls"
export FZF_DEFAULT_COMMAND="rg --files --hidden -L -g '!.git'"
export GTK_THEME=Adwaita:dark
export QT_QPA_PLATFORMTHEME="gtk2"
export CHROME_EXECUTABLE="$BROWSER"
export _JAVA_AWT_WM_NONREPARENTING=1
export DOTNET_CLI_TELEMETRY_OPTOUT=1

export LESS="-R"
export LESSOPEN="| /usr/bin/highlight -O ansi %s 2>/dev/null"
export MANPAGER="less -R --use-color -Dd+b -Duc"

[ -z "$DISPLAY" ] && [ "$(tty)" = "/dev/tty1" ] && ! pidof -s Xorg >/dev/null 2>&1 && exec startx "$XINITRC"

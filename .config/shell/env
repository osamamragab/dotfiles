#!/bin/sh

export TERMINAL="foot"
export EDITOR="nvim"
export VISUAL="nvim"
export BROWSER="zen-browser"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"
export XINITRC="$XDG_CONFIG_HOME/x11/xinitrc"
export INPUTRC="$XDG_CONFIG_HOME/readline/inputrc"
export XAUTHORITY="${XDG_RUNTIME_DIR:-$XDG_CACHE_HOME}/Xauthority"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export HISTFILE="$XDG_STATE_HOME/history"
export LESSHISTFILE="$XDG_STATE_HOME/less_history"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export PASSWORD_STORE_DIR="$XDG_DATA_HOME/password-store"
export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"
export W3M_DIR="$XDG_CONFIG_HOME/w3m"
export MBSYNCRC="$XDG_CONFIG_HOME/isyncrc"
export NOTMUCH_CONFIG="$XDG_CONFIG_HOME/notmuch/default/config"
export PARALLEL_HOME="$XDG_CONFIG_HOME/parallel"
export WEECHAT_HOME="$XDG_CONFIG_HOME/weechat"
export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc-2.0"
export TMUX_TMPDIR="${XDG_RUNTIME_DIR:-$XDG_CACHE_HOME/tmux}"
export GOPATH="$XDG_DATA_HOME/go"
export GOMODCACHE="$XDG_CACHE_HOME/go/mod"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export PYENV_ROOT="$XDG_DATA_HOME/pyenv"
export IPYTHONDIR="$XDG_CONFIG_HOME/ipython"
export KERAS_HOME="$XDG_STATE_HOME/keras"
export JUPYTERLAB_DIR="$XDG_DATA_HOME/jupyter/lab"
export JUPYTER_DATA_DIR="$XDG_DATA_HOME/jupyter"
export JUPYTER_CONFIG_DIR="$XDG_CONFIG_HOME/jupyter"
export JULIA_DEPOT_PATH="$XDG_DATA_HOME/julia:${JULIA_DEPOT_PATH:-}"
export JULIAUP_DEPOT_PATH="$XDG_DATA_HOME/julia"
export BUN_INSTALL="$XDG_DATA_HOME/bun"
export DENO_INSTALL="$XDG_DATA_HOME/deno"
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
export NPM_CONFIG_PREFIX="$XDG_DATA_HOME/npm"
export NPM_CONFIG_CACHE="$XDG_CACHE_HOME/npm"
export PNPM_HOME="$XDG_DATA_HOME/pnpm"
export GEM_PATH="$XDG_DATA_HOME/gem"
export MIX_HOME="$XDG_DATA_HOME/mix"
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
export PYTHONUSERBASE="$XDG_DATA_HOME/python"
export PYTHON_HISTORY="$XDG_STATE_HOME/python_history"
export PYTHONPYCACHEPREFIX="$XDG_CACHE_HOME/python"
export NODE_REPL_HISTORY="$XDG_STATE_HOME/node_repl_history"
export DOCKER_CONFIG="$XDG_CONFIG_HOME/docker"
export KUBECONFIG="$XDG_CONFIG_HOME/kube"
export KUBECACHEDIR="$XDG_CACHE_HOME/kube"
export ANSIBLE_CONFIG="$XDG_CONFIG_HOME/ansible/ansible.cfg"
export GRADLE_USER_HOME="$XDG_DATA_HOME/gradle"
export ANDROID_HOME="$XDG_DATA_HOME/android"
export ANDROID_SDK_HOME="$ANDROID_HOME/sdk"
export ANDROID_USER_HOME="$ANDROID_HOME/user"
export ADB_VENDOR_KEYS="$ANDROID_HOME/adbkeys"
export KODI_DATA="$XDG_DATA_HOME/kodi"
export WINEPREFIX="$XDG_DATA_HOME/wineprefixes/default"
export USQL_HISTORY="$XDG_STATE_HOME/usql_history"
export PSQL_HISTORY="$XDG_STATE_HOME/psql_history"
export SQLITE_HISTORY="$XDG_STATE_HOME/sqlite_history"
export ARDUINO_DIRECTORIES_DATA="$XDG_DATA_HOME/arduino"
export ARDUINO_DIRECTORIES_DOWNLOADS="$ARDUINO_DIRECTORIES_DATA/staging"
export ARDUINO_DIRECTORIES_USER="$ARDUINO_DIRECTORIES_DATA/user"
export FVM_CACHE_PATH="$XDG_DATA_HOME/fvm"
export ELM_HOME="$XDG_CONFIG_HOME/elm"
export LEIN_HOME="$XDG_DATA_HOME/lein"
export SDKMAN_DIR="$XDG_DATA_HOME/sdkman"
export DOTREMINDERS="$XDG_DATA_HOME/reminders"
export TEXMFHOME="$XDG_DATA_HOME/texmf"
export TEXMFVAR="$XDG_CACHE_HOME/texlive/texmf-var"
export TEXMFCONFIG="$XDG_CONFIG_HOME/texlive/texmf-config"
export MAXIMA_USERDIR="$XDG_CONFIG_HOME/maxima"
export DOTNET_CLI_HOME="$XDG_DATA_HOME/dotnet"
export _Z_DATA="$XDG_STATE_HOME/zdata"
export MAVEN_OPTS="-Dmaven.repo.local=$XDG_DATA_HOME/maven/repository"
export _JAVA_OPTIONS="-Djava.util.prefs.userRoot=$XDG_CONFIG_HOME/java"

export PATH="$HOME/.local/bin:$CARGO_HOME/bin:$GOPATH/bin:$NPM_CONFIG_PREFIX/bin:$PNPM_HOME:${PATH:-}"
export MANPATH="$XDG_DATA_HOME/man:${MANPATH:-}"

export SSH_ASKPASS="wayprompt-ssh-askpass"
export SUDO_ASKPASS="wayprompt-ssh-askpass"

export SVDIR_USER="$XDG_DATA_HOME/services"
[ -n "${XDG_RUNTIME_DIR:-}" ] &&
	export DOCKER_HOST="unix://$XDG_RUNTIME_DIR/podman/podman.sock"

export LESS="-R"
export MANPAGER="less -R --use-color -Dd+b -Duc"
export MANROFFOPT="-P -c"
export FZF_DEFAULT_OPTS="--layout=reverse --height=~40%"
export FZF_DEFAULT_COMMAND="fd --type f --hidden --strip-cwd-prefix"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export PASSWORD_STORE_GPG_OPTS="--no-throw-keyids"
export MIX_XDG="true"
export NIX_REMOTE="daemon"
export GTK_THEME="Arc-Dark"
export QT_STYLE_OVERRIDE="kvantum"
export QT_QPA_PLATFORMTHEME="gtk2"

#!/bin/sh

alias cp="cp -iv"
alias ln="ln -iv"
alias mv="mv -iv"
alias rm="rm -Iv"

alias ls="ls -hF --color=auto --group-directories-first"
alias la="ls -A"
alias ll="ls -lA"

alias grep="grep --color=auto"
alias gr="grep --exclude-dir={.git,node_modules} -Hnr"

alias gst="git status -sb"
alias gph="git push"
alias gpl="git pull"
alias gdf="git diff"
gdfd() { git diff "$@" | delta; }

alias xi="doas xbps-install -Sy"
alias xr="doas xbps-remove -R"
alias xq="xbps-query -R"
alias xs="xbps-query -Rs"

alias cd..="cd .."
alias x+="chmod +x"
alias mkd="mkdir -pv"
alias vi="nvim"
alias bc="bc -ql"
alias sv="doas sv"
alias vsv="doas vsv"
alias ccat="highlight -O ansi"
alias info="info --vi-keys"

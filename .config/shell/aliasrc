#!/bin/sh

alias cp="cp -iv"
alias ln="ln -iv"
alias mv="mv -iv"
alias rm="rm -v"

alias ls="ls -p --color=auto"
alias la="ls -A"
alias ll="ls -AlFh"
alias l="ls -CF"

alias grep="grep --color=auto"
alias grepn="grep -Hn"

alias gst="git status -sb"
alias gph="git push"
alias gpl="git pull"
alias gdf="git diff"

alias xi="doas xbps-install -Sy"
alias xr="doas xbps-remove -R"
alias xq="xbps-query -R"
alias xs="xbps-query -Rs"

alias vi="nvim"
alias x+="chmod +x"
alias cd..="cd .."

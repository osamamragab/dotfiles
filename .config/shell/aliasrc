#!/bin/sh

alias cp="cp -iv"
alias ln="ln -iv"
alias mv="mv -iv"
alias rm="rm -v"

alias ls="ls -p --color=auto"
alias la="ls -A"
alias ll="ls -AlFh"
alias l="ls -CF"

alias grep="grep --color=auto"
alias grepn="grep -Hn"
alias grepr="grep -Hnr"

alias gst="git status -sb"
alias gph="git push"
alias gpl="git pull"
alias gdf="git diff"
alias gdfd="git diff | delta"

alias xi="doas xbps-install -Sy"
alias xr="doas xbps-remove -R"
alias xq="xbps-query -R"
alias xs="xbps-query -Rs"

alias cd..="cd .."
alias x+="chmod +x"
alias vi="nvim"
alias sv="doas sv"
alias vsv="doas vsv"
alias info="info --vi-keys"

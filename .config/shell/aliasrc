#!/bin/sh

alias e="${EDITOR:-vi}"
alias q="exit"
alias x+="chmod +x"
alias mkd="mkdir -pv"
alias cd..="cd .."

alias cp="cp -iv"
alias ln="ln -iv"
alias mv="mv -iv"
alias rm="rm -Iv"

alias ls="ls -hF --color=auto --group-directories-first"
alias la="ls -A"
alias ll="ls -lA"

alias grep="grep --color=auto"
alias gr="grep --exclude-dir={.git,node_modules} -Hnr"

alias gst="git status -sb"
alias gph="git push"
alias gpl="git pull"
alias gdf="git diff"

alias xi="xbps-install -S"
alias xr="xbps-remove -R"
alias xq="xbps-query -R"

alias bc="bc -ql"
alias nnn="nnn -Rr"
alias ccat="highlight -O ansi"
alias info="info --vi-keys"
alias ffmpeg="ffmpeg -hide_banner"
alias ddgr="ddgr -x -n 5 --unsafe --noua"

command -v nvim >/dev/null 2>&1 && alias vi="nvim --noplugin"
command -v trash >/dev/null 2>&1 && alias rm="trash"

sudocmd="sudo"
command -v doas >/dev/null 2>&1 && sudocmd="doas"
for cmd in su xbps-install xbps-remove xbps-pkgdb sv vsv mount umount updatedb reboot poweroff shutdown; do
	alias $cmd="$sudocmd $cmd"
done
unset sudocmd cmd

#!/bin/sh

alias e="${EDITOR:-vi}"
alias q="exit"

alias mkd="mkdir -pv"
alias cp="cp -iv"
alias ln="ln -iv"
alias mv="mv -iv"
alias rm="rm -Iv"
alias ls="ls -hF --color=auto --group-directories-first"
alias la="ls -A"
alias ll="ls -lA"
alias grep="grep --color=auto"
alias gr="grep --exclude-dir={.git,node_modules} -Hnr"

alias g="git"
alias gst="git status -sb"
alias gph="git push"
alias gpl="git pull"
alias gdf="git diff"

alias pm="pacman"
alias ip="ip -color=auto"
alias bc="bc -ql"
alias nnn="nnn -Rr"
alias diff="diff --color=auto"
alias info="info --vi-keys"
alias ccat="highlight -O ansi"
alias rsync="rsync -vrPlu"
alias ffmpeg="ffmpeg -hide_banner"
alias ddgr="ddgr -x -n 5 --unsafe --noua"

command -v nvim >/dev/null 2>&1 && alias vim="nvim" vimdiff="nvim -d" vi="nvim --noplugin"

sudocmd="$(command -v doas 2>/dev/null || command -v sudo 2>/dev/null)"
for cmd in su mount umount updatedb reboot poweroff shutdown sv rsm pacman; do
	alias $cmd="$sudocmd $cmd"
done
unset sudocmd cmd
